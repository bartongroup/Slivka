{
  "type": "object",
  "properties": {
    "version": {"type": "string"}
  },
  "additionalProperties": {"$ref": "#/definitions/field"},

  "definitions": {
    "field": {
      "title": "form field validation schema",
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "value": {
          "type": "object",
          "properties": {
            "type": {
                "type": "string",
                "enum": ["int", "float", "text", "boolean", "choice", "file"]
            },
            "required": {"type": "boolean"}
          },
          "anyOf": [
            {"$ref": "#/definitions/integerField"},
            {"$ref": "#/definitions/decimalField"},
            {"$ref": "#/definitions/textField"},
            {"$ref": "#/definitions/booleanField"},
            {"$ref": "#/definitions/choiceField"},
            {"$ref": "#/definitions/fileField"}
        ],
        "required": ["type"]
        }
      },
      "additionalProperties": false,
      "required": ["label", "value"]
    },

    "integerField": {
      "title": "integer value validation schema",
      "properties": {
        "type": {"enum": ["int"]},
        "min": {"type": "integer"},
        "max": {"type": "integer"},
        "default": {"type": "integer"},
        "required": {}
      },
      "additionalProperties": false
    },

    "decimalField": {
      "title": "decimal value validation schema",
      "properties": {
        "type": {"enum": ["float"]},
        "min": {"type": "number"},
        "max": {"type": "number"},
        "minExclusive": {"type": "boolean"},
        "maxExclusive": {"type": "boolean"},
        "default": {"type": "number"},
        "required": {}
      },
      "additionalProperties": false
    },

    "textField": {
      "title": "text value validation schema",
      "properties": {
        "type": {"enum": ["text"]},
        "minLength": {
          "type": "integer",
          "minimum": 0
        },
        "maxLength": {
          "type": "integer",
          "minimum": 0
        },
        "default": {
          "type": "string"
        },
        "required": {}
      },
      "additionalProperties": false
    },

    "booleanField": {
      "title": "boolean value validation schema",
      "properties": {
        "type": {"enum": ["boolean"]},
        "default": {
          "type": "boolean"
        },
        "required": {}
      },
      "additionalProperties": false
    },

    "choiceField": {
      "title": "choice value validation schema",
      "properties": {
        "type": {"enum": ["choice"]},
        "choices": {
          "type": "object",
          "additionalProperties": {"type": "string"},
          "minProperties": 1
        },
        "default": {
          "type": "string"
        },
        "required": {}
      },
      "additionalProperties": false
    },

    "fileField": {
      "title": "file value validation schema",
      "properties": {
        "type": {"enum": ["file"]},
        "mimetype": {"type": "string"},
        "extension": {"type": "string"},
        "maxSize": {
          "type": "string",
          "pattern": "^\\d+\\s*(|K|M|G|T)B$"
        },
        "required": {}
      },
      "additionalProperties": false
    }
  }
}
