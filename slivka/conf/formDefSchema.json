{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "$schema": {"type": "string"},
    "__version__": {
      "type": "string"
    }
  },
  "additionalProperties": {
    "$ref": "#/definitions/field"
  },
  "definitions": {
    "field": {
      "title": "form field validation schema",
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "value": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "int",
                "float",
                "decimal",
                "text",
                "boolean",
                "flag",
                "choice",
                "file"
              ]
            },
            "required": {
              "type": "boolean"
            },
            "multiple": {
              "type": "boolean"
            }
          },
          "anyOf": [
            {
              "$ref": "#/definitions/integerField"
            },
            {
              "$ref": "#/definitions/decimalField"
            },
            {
              "$ref": "#/definitions/textField"
            },
            {
              "$ref": "#/definitions/booleanField"
            },
            {
              "$ref": "#/definitions/choiceField"
            },
            {
              "$ref": "#/definitions/fileField"
            }
          ],
          "required": [
            "type"
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "label",
        "value"
      ]
    },
    "integerField": {
      "title": "integer value validation schema",
      "properties": {
        "type": {
          "enum": [
            "int"
          ]
        },
        "min": {
          "type": "integer"
        },
        "max": {
          "type": "integer"
        },
        "default": {
          "type": "integer"
        },
        "required": {}
      },
      "additionalProperties": false
    },
    "decimalField": {
      "title": "decimal value validation schema",
      "properties": {
        "type": {
          "enum": [
            "float",
            "decimal"
          ]
        },
        "min": {
          "type": "number"
        },
        "max": {
          "type": "number"
        },
        "min-exclusive": {
          "type": "boolean"
        },
        "max-exclusive": {
          "type": "boolean"
        },
        "default": {
          "type": "number"
        },
        "required": {}
      },
      "additionalProperties": false
    },
    "textField": {
      "title": "text value validation schema",
      "properties": {
        "type": {
          "enum": [
            "text"
          ]
        },
        "min-length": {
          "type": "integer",
          "minimum": 0
        },
        "max-length": {
          "type": "integer",
          "minimum": 0
        },
        "default": {
          "type": "string"
        },
        "required": {}
      },
      "additionalProperties": false
    },
    "booleanField": {
      "title": "boolean value validation schema",
      "properties": {
        "type": {
          "enum": [
            "boolean",
            "flag"
          ]
        },
        "default": {
          "type": "boolean"
        },
        "required": {}
      },
      "additionalProperties": false
    },
    "choiceField": {
      "title": "choice value validation schema",
      "properties": {
        "type": {
          "enum": [
            "choice"
          ]
        },
        "choices": {
          "type": "object",
          "additionalProperties": true,
          "minProperties": 1
        },
        "default": {
          "type": "string"
        },
        "required": {}
      },
      "additionalProperties": false
    },
    "fileField": {
      "title": "file value validation schema",
      "properties": {
        "type": {
          "enum": [
            "file"
          ]
        },
        "media-type": {
          "type": "string"
        },
        "extensions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "max-size": {
          "type": "string",
          "pattern": "^\\d+\\s*(|K|M|G|T)B$"
        },
        "required": {}
      },
      "additionalProperties": false
    }
  }
}
