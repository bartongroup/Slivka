<?xml version="1.0" encoding="utf-8" standalone="yes"?>

<form
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="utils/FormSchema.xsd" >


    <field name="return">
        <label>Return code</label>
        <description>code returned by the program</description>
        <integerValue>
            <default>0</default>
        </integerValue>
    </field>

    <field name="long">
        <label>Long computation</label>
        <description>extends execution to 5 sec</description>
        <booleanValue>
            <default>false</default>
        </booleanValue>
    </field>

    <field name="very_long">
        <label>Very long computation</label>
        <description>extends execution to 30 seconds</description>
        <booleanValue>
            <default>false</default>
        </booleanValue>
    </field>

    <field name="foo">
        <label>Foo</label>
        <description>foo variable</description>
        <textValue>
            <minLength>2</minLength>
            <maxLength>10</maxLength>
            <default>Foo</default>
        </textValue>
    </field>

    <field name="error">
        <label>Error</label>
        <description>Generates an error</description>
        <booleanValue>
            <default>true</default>
        </booleanValue>
    </field>

    <field name="choice">
        <label>Choice</label>
        <description>Choose wisely</description>
        <select>
            <choice>
                <label>A</label>
                <value>-a</value>
            </choice>
            <choice>
                <label>B</label>
                <description>Not a correct answer</description>
                <value>-b</value>
            </choice>
            <choice>
                <label>C</label>
                <value>-c</value>
            </choice>
        </select>
    </field>

</form>
