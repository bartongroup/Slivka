<?xml version="1.0" encoding="utf-8" standalone="yes"?>

<runnerConfig>

  <option id="input">
    <name>Input file</name>
    <description>Input fasta file</description>
    <param>-in ${value}</param>
    <value>
      <file />
    </value>
  </option>

  <option id="output">
    <name>Output file</name>
    <description>Output file</description>
    <param>-out ${value}</param>
    <value>
      <file />
      <default>output.fasta</default>
    </value>
  </option>

  <option id="diagonals">
    <name>Diagonals</name>
    <description>Find diagonals</description>
    <param>-diag</param>
    <value>
      <boolean />
    </value>
  </option>

  <option id="maxiters">
    <name>Max iterations</name>
    <description>Maximum nunmber of iterations</description>
    <param>-maxiters ${value}</param>
    <value>
      <integer />
      <min>5</min>
      <max>20</max>
      <default>16</default>
    </value>
  </option>

  <option id="version">
    <name>Version</name>
    <description>Display version information</description>
    <param>-version</param>
    <value>
      <boolean />
      <default>false</default>
    </value>
  </option>

</runnerConfig>
