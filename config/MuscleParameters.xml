<?xml version="1.0" encoding="utf-8" standalone="yes"?>

<runnerConfig>

  <option id="input">
    <name>Input file</name>
    <description>Input fasta file</description>
    <param>-in ${value}</param>
    <fileValue/>
  </option>

  <option id="output">
    <name>Output file</name>
    <description>Output file</description>
    <param>-out ${value}</param>
    <fileValue>
      <default>output.fasta</default>
    </fileValue>
  </option>

  <option id="diagonals">
    <name>Diagonals</name>
    <description>Find diagonals</description>
    <param>-diag</param>
    <booleanValue/>
  </option>

  <option id="maxiters">
    <name>Max iterations</name>
    <description>Maximum nunmber of iterations</description>
    <param>-maxiters ${value}</param>
    <integerValue>
      <min>5</min>
      <max>20</max>
      <default>16</default>
    </integerValue>
  </option>

  <option id="version">
    <name>Version</name>
    <description>Display version information</description>
    <param>-version</param>
    <booleanValue>
      <default>false</default>
    </booleanValue>
  </option>

  <option id="method">
    <name>Computation method</name>
    <description>Choose wisely</description>
    <select>
      <choice>
        <description>As fast as possible</description>
        <param>--fast</param>
      </choice>
      <choice>
        <name>Cheap option</name>
        <param>--cheap</param>
      </choice>
      <choice>
        <param>--accurate</param>
      </choice>
    </select>
  </option>

</runnerConfig>
